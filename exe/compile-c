#!/bin/sh

root="$PWD"
target_dir=temp
c=source/c-precompiled
#warnings="-Wunused-label -Wunused-value -Wunused-variable"
gcc_options="-std=c11 $warnings -Wfatal-errors -O0"

compile_test_sph_sc_lib() {
